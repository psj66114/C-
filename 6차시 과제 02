#include <iostream>
#include <string>
using namespace std;

class Character {
public:
	char name[100];
	int age;
	char job[100];

public:
	Character(char name, int age, char job);
	Character(const Character& c);
};

Character::Character(const Character& c) {
	strcpy(this->name, c.name);
	this->age = c.age;
	strcpy(this->job, c.job);
}


int main() {

	int number = 0;

	while(1) {

		char name[100], job[100];
		int age = 0;

		cout << "======캐릭터 관리=====" << endl;
		cout << "1. 캐릭터 생성" << endl;
		cout << "2. 캐릭터 복사" << endl;
		cout << "3. 캐릭터 정보 확인" << endl;
		cout << "4. 캐릭터 정보 수정" << endl;
		cout << "5. 종료" << endl;
		cout << "번호를 선택해주세요: ";
		cin >> number;
		if (number == 1) {
			cout << "생성할 캐릭터의 이름, 나이, 직업을 순서대로 입력해주세요. (공백으로 구분)";
			cin >> name, age, job;
		}
		Character c(name, age, job);
		Character* ch;
		ch = &c;

		if (number == 2) {
			Character Copy(c);
			Character* cp;
			cp = &Copy;

			cout << "======캐릭터 관리=====" << endl;
			cout << "1. 캐릭터 생성" << endl;
			cout << "2. 캐릭터 복사" << endl;
			cout << "3. 캐릭터 정보 확인" << endl;
			cout << "4. 캐릭터 정보 수정" << endl;
			cout << "5. 종료" << endl;
			cout << "번호를 선택해주세요: ";
			cin >> number;
			if (number == 3) {
				cout << "*****캐릭터 정보*****" << endl;
				cout << "캐릭터 이름: " << c.name << endl;
				cout << "캐릭터 나이: " << c.age << endl;
				cout << "캐릭터 직업: " << c.job << endl;

				cout << "*****캐릭터 정보*****" << endl;
				cout << "캐릭터 이름: " << Copy.name << endl;
				cout << "캐릭터 나이: " << Copy.age << endl;
				cout << "캐릭터 직업: " << Copy.job << endl;
			}
			else if (number == 4) {
				cout << "수정하고 싶은 캐릭터를 선택하세요. (1 or 2)" << endl;
				cin >> number;
				if (number == 1) {
					cout << "설정하고 싶은 이름, 나이, 직업을 입력해주세요.";
					cin >> name, age, job;
					strcpy(c.name, name);
					c.age = age;
					strcpy(c.job, job);
				}
				else if (number == 2) {
					cout << "설정하고 싶은 이름, 나이, 직업을 입력해주세요.";
					cin >> name, age, job;
					strcpy(Copy.name, name);
					Copy.age = age;
					strcpy(
						Copy.job, job);
				}
				else
					cout << "존재하지 않는 캐릭터입니다." << endl;
			}
			else
				break;
		}
		else if (number == 3) {
			cout << "*****캐릭터 정보*****" << endl;
			cout << "캐릭터 이름: " << c.name << endl;
			cout << "캐릭터 나이: " << c.age << endl;
			cout << "캐릭터 직업: " << c.job << endl;

		}
		else if (number == 4) {
			cin >> number;
			if (number == 1) {
				cout << "설정하고 싶은 이름, 나이, 직업을 입력해주세요.";
				cin >> name, age, job;
				strcpy(c.name, name);
				c.age = age;
				strcpy(c.job, job);
				
			}
		}
		else
			break;
	}
	return 0;

}
